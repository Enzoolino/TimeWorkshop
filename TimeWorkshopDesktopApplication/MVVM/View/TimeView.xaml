<UserControl x:Class="TimeWorkshopDesktopApplication.MVVM.View.TimeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeWorkshopDesktopApplication.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="700"
             Background="#1B1B1B">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Grid.Column="0">
            
            <TextBlock Text="Primary Time"
                       Foreground="White"
                       FontSize="15"
                       FontFamily="/Fonts/#Poppins"
                       HorizontalAlignment="Center"
                       Margin="0, 20, 0, 0"/>
            
            <TextBox Style="{StaticResource WatermarkTextBox}"
                     x:Name="txtPrimary"
                     Tag="Input"
                     Width="210"
                     Height="25"
                     FontSize="15"
                     FontFamily="/Fonts/#Poppins"
                     HorizontalAlignment="Center"
                     Margin="0, 20, 0, 0"
                     BorderBrush="{x:Null}"
                     Background="#FFF6F6F6"
                     Foreground="DarkGray"
                     TextAlignment="Center"/>
            
            <TextBlock Text="Format must be 00:00:00"
                       Foreground="Gray"
                       FontSize="11"
                       FontFamily="/Fonts/#Poppins"
                       FontStyle="Italic"
                       HorizontalAlignment="Center"
                       Margin="0, 5, 0, 0"/>

            <Button x:Name="btnConfirmPrimary"
                    Content="Confirm"
                    Width="100"
                    Margin="0, 5, 0, 0"
                    Background="#ad3ecf" 
                    Foreground="White" 
                    BorderBrush="#ad3ecf" 
                    BorderThickness="2" 
                    Padding="10" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Cursor="Hand"
                    Click="PrimaryConfirmButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFD83F"/>
                                <Setter Property="BorderBrush" Value="#FFD83F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFA032"/>
                                <Setter Property="BorderBrush" Value="#FFA032"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>

        <StackPanel Grid.Row="0"
                    Grid.Column="1">
            
            <TextBlock Text="Operational Time"
                       Foreground="White"
                       FontSize="15"
                       FontFamily="/Fonts/#Poppins"
                       HorizontalAlignment="Center"
                       Margin="0, 20, 0, 0"/>
            
            <TextBox Style="{StaticResource WatermarkTextBox}"
                     Tag="Input"
                     Width="210"
                     Height="25"
                     FontSize="15"
                     FontFamily="/Fonts/#Poppins"
                     HorizontalAlignment="Center"
                     Margin="0, 20, 0, 0"
                     BorderBrush="{x:Null}"
                     Background="#FFF6F6F6"
                     Foreground="DarkGray"
                     TextAlignment="Center"/>

            <TextBlock Text="Format must be 00:00:00"
                       Foreground="Gray"
                       FontSize="11"
                       FontFamily="/Fonts/#Poppins"
                       FontStyle="Italic"
                       HorizontalAlignment="Center"
                       Margin="0, 5, 0, 0"/>

            <Button x:Name="btnConfirmOperational"
                    Content="Confirm"
                    Width="100"
                    Margin="0, 5, 0, 0"
                    Background="#ad3ecf" 
                    Foreground="White" 
                    BorderBrush="#ad3ecf" 
                    BorderThickness="2" 
                    Padding="10" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Cursor="Hand"
                    Click="OperationalConfirmButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFD83F"/>
                                <Setter Property="BorderBrush" Value="#FFD83F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFA032"/>
                                <Setter Property="BorderBrush" Value="#FFA032"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>

        <StackPanel Grid.Row="1"
                    Grid.ColumnSpan="2">
            <TextBlock Text="Operations"
                       Foreground="White"
                       FontSize="18"
                       FontFamily="/Fonts/#Poppins"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Bigger(&gt;):"
                       Foreground="White"
                       FontSize="13"
                       FontFamily="/Fonts/#Poppins"
                       HorizontalAlignment="Center"
                       Margin="0, 13, 190, 0"/>

            <TextBlock Name="txtBigger"
                     Text="Empty"
                     TextAlignment="Center"
                     FontSize="12"
                     Foreground="#ad3ecf"
                     FontFamily="/Fonts/#Poppins"
                     Width="80"
                     Height="20"
                     Margin="0, 8, 190, 0"
                     Background="#FFF6F6F6"/>

            <TextBlock Text="Smaller Or Equal(&lt;=):"
                       Foreground="White"
                       FontSize="13"
                       FontFamily="/Fonts/#Poppins"
                       HorizontalAlignment="Center"
                       Margin="0, 40, 190, 0"/>

            <TextBlock Name="txtSmallerOrEqual"
                     Text="Empty"
                     TextAlignment="Center"
                     FontSize="12"
                     Foreground="#ad3ecf"
                     FontFamily="/Fonts/#Poppins"
                     Width="80"
                     Height="20"
                     Margin="0, 8, 190, 0"
                     Background="#FFF6F6F6"/>

            <TextBlock Text="Bigger Or Equal(&gt;=):"
                       Foreground="White"
                       FontSize="13"
                       FontFamily="/Fonts/#Poppins"
                       HorizontalAlignment="Center"
                       Margin="0, 40, 190, 0"/>

            <TextBlock Name="txtBiggerOrEqual"
                     Text="Empty"
                     TextAlignment="Center"
                     FontSize="12"
                     Foreground="#ad3ecf"
                     FontFamily="/Fonts/#Poppins"
                     Width="80"
                     Height="20"
                     Margin="0, 8, 190, 0"
                     Background="#FFF6F6F6"/>



        </StackPanel>

        <StackPanel Grid.Row="1"
                    Grid.Column="0">

            <TextBlock Text="Equal(==):"
                       Foreground="White"
                       FontSize="13"
                       FontFamily="/Fonts/#Poppins"
                       HorizontalAlignment="Center"
                       Margin="0, 40, 170, 0"/>

            <TextBlock Name="txtEqual"
                     Text="Empty"
                     TextAlignment="Center"
                     FontSize="12"
                     Foreground="#ad3ecf"
                     FontFamily="/Fonts/#Poppins"
                     Width="80"
                     Height="20"
                     Margin="0, 8, 170, 0"
                     Background="#FFF6F6F6"/>


            <TextBlock Text="Not Equal(!=):"
                       Foreground="White"
                       FontSize="13"
                       FontFamily="/Fonts/#Poppins"
                       HorizontalAlignment="Center"
                       Margin="0, 40, 170, 0"/>

            <TextBlock Name="txtNotEqual"
                     Text="Empty"
                     TextAlignment="Center"
                     FontSize="12"
                     Foreground="#ad3ecf"
                     FontFamily="/Fonts/#Poppins"
                     Width="80"
                     Height="20"
                     Margin="0, 8, 170, 0"
                     Background="#FFF6F6F6"/>

            <TextBlock Text="Smaller(&lt;):"
                       Foreground="White"
                       FontSize="13"
                       FontFamily="/Fonts/#Poppins"
                       HorizontalAlignment="Center"
                       Margin="0, 40, 170, 0"/>

            <TextBlock Name="txtSmaller"
                     Text="Empty"
                     TextAlignment="Center"
                     FontSize="12"
                     Foreground="#ad3ecf"
                     FontFamily="/Fonts/#Poppins"
                     Width="80"
                     Height="20"
                     Margin="0, 8, 170, 0"
                     Background="#FFF6F6F6"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Grid.Column="1">

            <CheckBox Name="TimePeriodCheckBox"
                      Content="TimePeriod"
                      Style="{StaticResource PurpleCheckBox}"
                      FontFamily="/Fonts/#Poppins"
                      Foreground="White"
                      HorizontalAlignment="Center"
                      Margin="0, 50, 0, 0"/>

            <TextBlock Text="This side of testing needs you to click the textbox.&#x0a;Operational Input changes to class 'TimePeriod' !"
                       Foreground="Gray"
                       FontSize="11"
                       FontFamily="/Fonts/#Poppins"
                       HorizontalAlignment="Center"
                       Margin="0, 5, 0, 0"/>

            <TextBlock Text="Add(+):"
                       Foreground="White"
                       FontSize="13"
                       FontFamily="/Fonts/#Poppins"
                       HorizontalAlignment="Center"
                       Margin="0, 10, 0, 0"/>

            <TextBlock Name="txtAdd"
                     Text="Empty"
                     Width="150"
                     Height="20"
                     FontSize="13"
                     FontFamily="/Fonts/#Poppins"
                     HorizontalAlignment="Center"
                     Background="#FFF6F6F6"
                     Foreground="#ad3ecf"
                     TextAlignment="Center"
                     Margin="0, 10, 0, 0"/>

            <TextBlock Text="Subtract(-):"
                       Foreground="White"
                       FontSize="13"
                       FontFamily="/Fonts/#Poppins"
                       HorizontalAlignment="Center"
                       Margin="0, 30, 0, 0"/>

            <TextBlock Name="txtSubtract"
                     Text="Empty"
                     Width="150"
                     Height="20"
                     FontSize="13"
                     FontFamily="/Fonts/#Poppins"
                     HorizontalAlignment="Center"
                     Background="#FFF6F6F6"
                     Foreground="#ad3ecf"
                     TextAlignment="Center"
                     Margin="0, 10, 0, 0"/>


        </StackPanel>
        
            
    </Grid>
</UserControl>
